#include <iostream>
using namespace std;

int main()
{
  int numCoffee = 10;
  int *ptrCoffee;
  ptrCoffee = &numCoffee;
  
  cout << "ptrCoffee = " << ptrCoffee;
  cout << "*ptrCoffee = " << *ptrCoffee;
  
  *ptrCoffee = 20;

  cout << "numCoffee = " << numCoffee;
  cout << "ptrCoffee = " << *ptrCoffee;


  return 0;
}
